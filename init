# Завершить процесс Центра приложений Fedora:
killall gnome-software
rm -rf ~/.cache/gnome-software

# Установите RPM Fusion Free (для открытого ПО) и Non-Free (для проприетарного):
sudo dnf install https://download1.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm
sudo dnf install https://download1.rpmfusion.org/nonfree/fedora/rpmfusion-nonfree-release-$(rpm -E %fedora).noarch.rpm

# Отключить openh264 если не доступен при обновлении suod dnf update -y
sudo nano /etc/dnf/dnf.conf
# Добавить в конец файла:
exclude=openh264

# Ускорение dnf

sudo nano /etc/dnf/dnf.conf
# Основные параметры скорости
fastestmirror=True
max_parallel_downloads=10
defaultyes=True
keepcache=True
# Для SSD или быстрых дисков
deltarpm=True
deltarpm_percentage=70
# Кэширование
metadata_expire=1h
minrate=1
# Скачивание
ip_resolve=4  # принудительно IPv4, если IPv6 медленный
timeout=10    # секунд
retries=3

sudo dnf install dnf-plugin-fastestmirror

sudo dnf install gnome-tweaks

flatpak install flathub com.mattjakeman.ExtensionManager

# Расширения
- Vitals
- Burn my window
- Dash todock
- Keep pinned apps in AppGrid 
